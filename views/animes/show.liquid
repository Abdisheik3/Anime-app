{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>
        {{ anime.title }}
        -
        {% if anime.ready %}
          Ready
        {% else %}
          Not Ready
        {%endif%}
      </h2>
      <h3>Amount:
        {{ anime.amount }}
      </h3>
      <h6>Body:
        {{ anime.body }}
      </h6>
      {% if anime.owner == userId %}
        <div class="btn-group">

          <a href="/animes/{{ anime.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/animes/{{ anime.id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}}