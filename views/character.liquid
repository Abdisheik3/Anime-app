{% block content %}
  <div class="card mb-4 shadow">
    <div class="card-body">
      <p>{{ character.name }}
      </p>
      <div class="d-flex justify-content-between">
        <small>owner:
          {{ character.owner.username }}
        </small>
        {% if character.owner == userId %}
          <form action="/characters/delete/{{anime.id}}/{{anime.id}}?_method=DELETE" method="POST">
            <input class="btn btn-danger" type="submit" value="X">
          </form>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}}}}